{% assign block_settings = block.settings %}


{% capture list_items %}
  {% content_for 'blocks' %}
{% endcapture %}

{% liquid
  # Create an array from the list items to be used for different layout types
  assign list_items_array = list_items | strip | remove_last: '<!--@list/split-->' | split: '<!--@list/split-->'
%}

{% if list_items_array.size > 1 %}
  {% capture controls %}
    {%- render 'slideshow-controls',
      style: block_settings.slideshow_controls_style,
      autoplay: block_settings.autoplay,
      item_count: list_items_array.size,
      show_arrows: false,
      arrows_on_media: true,
      controls_on_media: true,
      pagination_position: 'center',
      icon_style: block_settings.icons_style
    -%}
  {% endcapture %}
{% endif %}


{% liquid
  assign slideshow_class = 'slideshow--single-media'
  if list_items_array.size > 1
    assign slideshow_class = ''
  endif

  assign show_arrows = true
  if block_settings.icons_style == 'none' or list_items_array.size <= 1
    assign show_arrows = false
  endif
%}

<div class="slideshow-block" {{ block.shopify_attributes }}>
  <div class="section-background color-{{ block_settings.color_scheme }}"></div>
  <div
    class="spacing-style color-{{ block_settings.color_scheme }} disable-section-top-offset"
    style="{% render 'spacing-padding', settings: block_settings %}"
  >
    {% render 'slideshow',
      class: slideshow_class,
      controls: controls,
      show_arrows: show_arrows,
      icon_style: block_settings.icons_style,
      autoplay: block_settings.autoplay,
      autoplay_speed: block_settings.autoplay_speed,
      slides: list_items_array,
      slide_size: block_settings.slide_height
    %}
  </div>
</div>

{% stylesheet %}
  .slideshow-block {
    position: relative;
    width: 100%;
    display: block;
  }
{% endstylesheet %}

